<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean name="reader" class="wjc.bigdata.spark.local.TestReader"/>
    <bean name="firstHandler" class="wjc.bigdata.spark.local.TestFirstHandler"/>
    <bean name="secondHandler" class="wjc.bigdata.spark.local.TestSecondHandler"/>
    <bean name="testOutput" class="wjc.bigdata.spark.local.TestWriter"/>

    <bean name="handlerChain" class="wjc.bigdata.spark.data.pump.operation.DefaultHandlerChain">
        <constructor-arg>
            <list>
                <ref bean="firstHandler"/>
                <ref bean="secondHandler"/>
            </list>
        </constructor-arg>
    </bean>
    <!--<bean name="beforeAction" class="wjc.bigdata.spark.local.TestBeforeAction"/>-->
    <bean name="afterAction" class="wjc.bigdata.spark.local.TestAfterAction"/>
</beans>